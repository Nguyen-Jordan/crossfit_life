<style>
  /* Importation de polices depuis Google */
  @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800;900&display=swap');


  * {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Poppins', sans-serif;
  }

  .container{
  position: relative;
  width: 100%;
  }

  body {
  position: relative;
  min-height: 100vh;
  width: 100%;
  overflow: hidden;
  }
  /* Navbar */
  .sidebar {
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 78px;
  background: #187566;
  padding: 6px 14px;
  transition: all 0.5s ease;
  }

  .sidebar.active {
  width: 280px;
  }

  .divButton {
  display: -webkit-flex;
  display: -moz-flex;
  display: -ms-flex;
  display: -o-flex;
  display: flex;
  justify-content: flex-end;
  }

  .sidebar .logo_content .logo {
  color: white;
  display: flex;
  height: 50px;
  width: 100%;
  align-items: center;
  opacity: 0;
  pointer-events: none;
  transition: all 0.5s ease;
  }

  .sidebar.active .logo_content .logo {
  opacity: 1;
  pointer-events: none;
  }

  .logo_content .logo i{
  font-size: 28px;
  margin-right: 5px;
  }

  .logo_content .logo .logo_name {
  font-size: 20px;
  font-weight: 400;
  }

  .sidebar #btn{
  position: absolute;
  color: #fff;
  top: 6px;
  left: 50%;
  font-size: 20px;
  height: 50px;
  width: 50px;
  text-align: center;
  line-height: 50px;
  transform: translateX(-50%);
  }

  .sidebar.active #btn {
  left: 90%;
  }

  .sidebar ul{
  margin-top: 20px;
  padding-left: 0;
  }

  .sidebar ul li{
  position: relative;
  height: 50px;
  width: 100%;
  margin: 0 5px;
  list-style: none;
  line-height: 50px;
  }

  .sidebar ul li .tooltip{
  position: absolute;
  left: 122px;
  top: 0;
  transform: translate(-50%, -50%);
  border-radius: 6px;
  height: 35px;
  width: 122px;
  background: #06255b;
  text-align: center;
  color: #fff;
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
  transition: 0s;
  opacity: 0;
  pointer-events: none;
  display: block;
  }

  .sidebar.active ul li .tooltip {
  display: none;
  }

  .sidebar ul li:hover .tooltip{
  transition: all 0.5s ease;
  opacity: 1;
  top: 50%;
  }

  .sidebar ul li input {
  position: absolute;
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
  border-radius: 12px;
  outline: none;
  border: none;
  background: #4ec3b3;
  padding-left: 50px;
  font-size: 18px;
  color: #fff;
  }

  .sidebar ul li .bx-search-alt-2 {
  position: absolute;
  z-index: 99;
  color: #fff;
  font-size: 22px;
  transition: all 0.5s ease;
  }

  .sidebar ul li .bx-search-alt-2:hover {
  background: #06255b;
  color: #4ec3b3;
  }

  .sidebar ul li a {
  color: #fff;
  display: flex;
  align-items: center;
  text-decoration: none;
  transition: all 0.4s ease;
  border-radius: 12px;
  white-space: nowrap;
  }

  .sidebar ul li a:hover {
  color: #187566;
  background: #06255b;
  }

  .sidebar ul li i {
  height: 50px;
  min-width: 50px;
  border-radius: 12px;
  line-height: 50px;
  text-align: center;
  }

  .sidebar .links_name{
  opacity: 0;
  pointer-events: none;
  transition: all 0.5s ease;
  }

  .sidebar.active .links_name{
  opacity: 1;
  pointer-events: auto;
  }

  .sidebar .profile_content {
  position: absolute;
  color: #fff;
  bottom: 0;
  left: 0;
  width: 100%;
  }

  .sidebar .profile_content .profile {
  position: relative;
  padding: 10px 6px;
  height: 60px;
  background: none;
  transition: all 0.4s ease;
  }

  .sidebar.active .profile_content .profile {
  background: #d39f0f;
  }

  .profile_content .profile .profile_details {
  display: flex;
  align-items: center;
  opacity: 0;
  pointer-events: none;
  white-space: nowrap;
  }

  .sidebar.active .profile .profile_details {
  opacity: 1;
  pointer-events: auto;
  }

  .profile .profile_details img {
  height: 45px;
  width: 45px;
  object-fit: cover;
  border-radius: 12px;
  }

  .profile .profile_details .rol_email {
  margin-left: 10px;
  }

  .profile .profile_details .email {
  font-size: 12px;
  font-weight: 400;
  }

  .profile .profile_details .rol {
  font-size: 15px;
  }

  .profile a #log_out {
  position: absolute;
  bottom: 5px;
  left: 50%;
  transform: translateX(-50%);
  min-width: 5px;
  line-height: 50px;
  font-size: 20px;
  border-radius: 12px;
  text-align: center;
  background: #187566;
  color: #d39f0f;
  }

  .sidebar.active .profile a #log_out {
  left: 88%;
  color: #187566;

  }

  .sidebar.active .profile a #log_out {
  background: none;
  }

  .sidebar .profile a .tooltip{
  position: absolute;
  left: 122px;
  top: 0;
  transform: translate(-35%, -50%);
  border-radius: 6px;
  height: 35px;
  width: 122px;
  background: #06255b;
  text-align: center;
  color: #fff;
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
  transition: 0s;
  opacity: 0;
  pointer-events: none;
  display: block;
  }

  .sidebar.active .profile a .tooltip {
  display: none;
  }

  .sidebar .profile a:hover .tooltip{
  transition: all 0.5s ease;
  opacity: 1;
  top: 50%;
  }

  .home_content{
  position: absolute;
  height: 100%;
  width: calc(100% - 78px);
  left: 78px;
  transition: all 0.5s ease;
  }

  .home_content .text{
  font-size: 25px;
  font-weight: 500;
  color: #06255b;
  margin: 12px;
  }

  .sidebar.active ~ .home_content {
  width: calc(100% - 280px);
  left: 280px;
  }

  @media (max-width: 768px) {
    .sidebar {
      left: -280px;
    }

    .sidebar.active {
      width: 100%;
      left: 0;
    }

    .main {
      width: 100%;
      left: 0;
    }

    .main.active {
      left: 280px;
    }
  }
</style>
