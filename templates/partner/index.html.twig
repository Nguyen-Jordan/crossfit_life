{% extends 'base.html.twig' %}

{% block title %}{{ franchise.name }}- Crossfit_life{% endblock %}

{% block body %}
        <div class="text">{{ franchise.name }}</div>
        <main class="container">
                <section class="row row-cols-1 row-cols-md-2">
                        {% for structure in franchise.structures %}
                                <div class="col-lg-6 my-4">
                                        <article class="card col-lg-6 mx-auto" style="width: 18rem;">
                                                <div class="card-body">
                                                        <h2 class="card-title">{{ structure.address }}</h2>
                                                        <table class="table">
                                                                <thead>
                                                                <tr>
                                                                        <th>Droits</th>
                                                                        <th>status</th>
                                                                </tr>
                                                                </thead>
                                                                <tbody>
                                                                {% for droit in structure.structuresDroits %}
                                                                        <tr>
                                                                                <td>
                                                                                        {{ droit.droits.name }}
                                                                                </td>
                                                                                <td>
                                                                                        <div class="form-switch text-center">
                                                                                                <input class="form-check-input" type="checkbox"
                                                                                                        {{ (droit.status) ? 'checked' : ''}}
                                                                                                       id="flexSwitchCheckDefault">
                                                                                                <label class="form-check-label" for="flexSwitchCheckDefault"></label>
                                                                                        </div>
                                                                                </td>
                                                                        </tr>
                                                                {% endfor %}
                                                                </tbody>
                                                        </table>
                                                </div>
                                        </article>
                                </div>
                        {% endfor %}
                </section>
        </main>
{% endblock %}