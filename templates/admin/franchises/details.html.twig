{% extends 'base.html.twig' %}

{% block title %}{{ franchise.name }}- Crossfit_life{% endblock %}

{% block body %}

    <div class="texte">{{ franchise.name }}</div>
    <main class="conteneur">
        <section class="rang">
            {% for structure in franchise.structures %}
                <article class="carte">
                    <div class="en-têteCarte">
                        <h1 class="en-tête">{{ structure.address }}</h1>
                    </div>
                    <div class="titre">
                        <h2 class="les-droits">Les droits</h2>
                    </div>
                    <div class="corpsCarte">
                        <table class="table table-borderless">
                            <tbody>
                            {% for droit in structure.structuresDroits %}
                                <tr>
                                    <td class="detail">
                                        {{ droit.droits.name }}
                                    </td>
                                    <td class="detail">
                                        <form class="form-switch text-center" action="{{ url('franchises_activer_permission', { slug: franchise.slug ,id: droit.id }) }}" method="post">
                                            <input type="hidden" name="token" value="{{ csrf_token('modify_item') }}"/>
                                            <button type="submit">
                                                <input class="form-check-input" type="checkbox"
                                                        {{ (droit.status) ? 'checked' : ''}} data-id="{{ droit.id }}"
                                                       id="flexSwitchCheckDefault">
                                                <label class="form-check-label" for="flexSwitchCheckDefault"></label>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </article>
            {% endfor %}
        </section>
    </main>
{% endblock %}