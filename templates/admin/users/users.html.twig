{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <main class="container text-center">
        <div class="texte">Utilisateurs</div>
        <section class="row justify-content-md-center">
            <div class="col-10">
                <a href="{{ path("app_register") }}" class="btn btn-warning">Ajouter utilisateur</a>
                <table id="datatable" class="table table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Status</th>
                            <th scope="col">Rôles</th>
                            <th scope="col">Prénom</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Email</th>
                            <th scope="col">Structure</th>
                            <th scope="col">Franchise</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>
                                <div class="form-switch text-center">
                                    <input class="form-check-input" type="checkbox"
                                      {{ (user.status) ? 'checked' : ''}}
                                           id="flexSwitchCheckDefault">
                                    <label class="form-check-label" for="flexSwitchCheckDefault"></label>
                                </div>
                            </td>
                            <td>
                                {% for role in user.roles %}
                                    {% if role == "ROLE_MANAGER"  %}
                                        Manager
                                    {% elseif role == "ROLE_PARTNER" %}
                                        Partenaire
                                    {% elseif role == "ROLE_ADMIN" %}
                                        Admin
                                    {% endif %}
                                {% endfor %}
                            </td>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.structure|length }}</td>
                            <td>{{ user.franchise|length }}</td>

                            <td><a href="{{ path('admin_modifier_utilisateur', {'id': user.id}) }}" class="btn btn-warning">Modifier</a></td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Il n'y a pas d'utilisateur inscrit</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </section>
    </main>
{% endblock %}